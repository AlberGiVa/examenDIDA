<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="alberto.gila.finaldigila.controller.HomeController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-background-radius: 5;">
        <Label fx:id="lblUsuario" text="Bienvenido">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <HBox HBox.hgrow="ALWAYS" />

        <ImageView fx:id="imgFavorito" fitHeight="60.0" fitWidth="60.0" preserveRatio="true" />
    </HBox>

    <Label text="Listado de Juegos">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <TableView fx:id="tablaEquipos" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre del Juego" />
            <TableColumn fx:id="colCompletado" prefWidth="100.0" text="Completado" />
            <TableColumn fx:id="colFecha" prefWidth="150.0" text="Lanzamiento" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER" spacing="15.0">

        <Button fx:id="btnFavorito" onAction="#marcarFavorito"
                style="-fx-background-color: #FFD700; -fx-text-fill: black; -fx-font-weight: bold;"
                text="Favorito" />

        <Button fx:id="btnCrear" onAction="#abrirCrear"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                text="Nuevo Videojuego" />

        <Button fx:id="btnEditar" onAction="#abrirEditar"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"
                text="Editar" />

        <Button fx:id="btnEliminar" onAction="#eliminarEquipo"
                style="-fx-background-color: #f44336; -fx-text-fill: white;"
                text="Eliminar" />
    </HBox>

</VBox>